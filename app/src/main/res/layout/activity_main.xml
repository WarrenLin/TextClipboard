<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextIsSelectable"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/tv_selectable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Long press me to copy-1"
        android:textSize="24sp"
        android:gravity="center"
        android:textIsSelectable="true"
        android:background="#c8c8c8"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title1"
        />

    <TextView
        android:id="@+id/tv_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LongClickListener"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_selectable"/>

    <TextView
        android:id="@+id/tv_longclick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Long press me to copy-2"
        android:textSize="24sp"
        android:gravity="center"
        android:background="#c8c8c8"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title2"
        />

    <TextView
        android:id="@+id/tv_title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EditText"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_longclick"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Long press me to copy-3"
        android:textSize="24sp"
        android:gravity="center"
        android:background="#c8c8c8"
        android:layout_marginTop="10dp"
        android:textIsSelectable="true"
        android:editable="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title3"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Paste here to verify."
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>